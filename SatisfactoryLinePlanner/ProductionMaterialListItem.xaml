<UserControl x:Class="SatisfactoryLinePlanner.ProductionMaterialListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatisfactoryLinePlanner"
             mc:Ignorable="d">
    
    <Grid Margin="10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock x:Name="TextBlockMaterialName" Text="素材1" TextAlignment="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock x:Name="TextBlockMaterialValue" Text="1000" TextAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
