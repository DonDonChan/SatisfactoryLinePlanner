<UserControl x:Class="SatisfactoryLinePlanner.ListItems.MaterialWithNumOnButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatisfactoryLinePlanner.ListItems"
             mc:Ignorable="d">
    
    <Grid>
        <Button x:Name="Button_RequestRecipeSelect" Margin="5, 3, 5, 3" Style="{StaticResource MaterialDesignFlatButton}" Height="auto" Width="auto">
            <Grid Margin="5, 2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock x:Name="TextBlock_Name" TextAlignment="Center" Foreground="White" Opacity="0.8"/>
                </Grid>

                <Grid Grid.Row="1">
                    <TextBlock x:Name="TextBlock_Number" TextAlignment="Center" Foreground="White" Opacity="0.8"/>
                </Grid>
            </Grid>
        </Button>
    </Grid>
</UserControl>
