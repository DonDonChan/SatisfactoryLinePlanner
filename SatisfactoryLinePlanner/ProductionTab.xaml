<UserControl x:Class="SatisfactoryLinePlanner.ProductionTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SatisfactoryLinePlanner"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="ButtonGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="AddRcipe" Content="レシピ追加" Grid.Column="0" Background="#66ff88"/>
            <Button x:Name="ClearAll" Content="全消去" Grid.Column="2" Background="#ff4444"/>
        </Grid>

        <Grid  x:Name="ResultGrid" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="生産素材" FontWeight="Bold"/>
                </Grid>

                <Grid Grid.Row="1">
                    <WrapPanel x:Name="ProductionOutListPanel"/>
                </Grid>
            </Grid>

            <GridSplitter Grid.Row="1" Height="3" Background="#aaaaaa" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="要求素材" FontWeight="Bold"/>
                </Grid>

                <Grid Grid.Row="1">
                    <WrapPanel x:Name="ProductionInListPanel"/>
                </Grid>
            </Grid>
        </Grid>

        <GridSplitter Grid.Row="2" Height="3" Background="#aaaaaa" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <Grid x:Name="ProductionLineGrid" Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="生産リスト" FontWeight="Bold"/>
            </Grid>

            <Grid Grid.Row="1">
                <Border BorderBrush="#555555" BorderThickness="0, 0, 0, 1" Padding="0, 0, 0, 2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Button x:Name="RecipeListItemUp" Content="↑" Background="#88ccff" Visibility="Hidden"/>
                        </Grid>

                        <Grid Grid.Column="1" Margin="3, 0 ,0 ,0">
                            <Button x:Name="RecipeListItemDown" Content="↓" Background="#88ccff" Visibility="Hidden"/>
                        </Grid>

                        <Grid Grid.Column="2">
                            <TextBlock x:Name="RecipeName" Text="レシピ名" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="3">
                            <TextBlock Text="消費電力" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="4">
                            <TextBlock Text="使用施設" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="5">
                            <TextBlock Text="OC" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="6">
                            <TextBlock Text="生産品" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="7">
                            <TextBlock Text="要求素材" TextAlignment="Center"/>
                        </Grid>

                        <Grid Grid.Column="11">
                            <Button x:Name="RecipeListItemDelete" Content="X" Background="#ff4444" Visibility="Hidden"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel x:Name="ProductionRecipeListPanel"/>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
